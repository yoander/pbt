service_name=php-fpm.service
unit_file=./sapi/fpm/php-fpm.service

[[ $sysinit_versioned == true ]] && \
    service_name=$(echo $php_mayor_revision|sed -r 's/[-\.x]//g')-fpm.service

systemd_unit=/usr/lib/systemd/system/$service_name
$userdo cp -v $unit_file $systemd_unit
#
# Replace PID file to allow several PHP versions 
[[ $sysinit_versioned == true ]] && \
	sed -r -i "s/PIDFile=\/var\/run\/php-fpm.pid/PIDFile=\/var\/run\/'$php_mayor_revision'-fpm.pid/"
#
$userdo systemctl enable $service_name && \
$userdo systemctl start $service_name && \
$userdo systemctl status $service_name
