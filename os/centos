userdo=$1
$userdo yum -y install epel-release gcc gcc-c++ make autoconf flex bison libtool libstdc++-devel \
        libxml2-devel openssl openssl-devel pcre-devel sqlite-devel bzip2-devel \
        libcurl-devel libicu-devel gd-devel readline-devel && \
$userdo	ln -fs /usr/lib64/libpcre.so.1.2.0 /usr/lib/libpcre.so
